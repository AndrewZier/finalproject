// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
  //   mysql://USER:PASSWORD@HOST:PORT/DATABASE
}

model User {
  id              Int              @id @default(autoincrement())
  email           String           @unique
  name            String?
  password        String
  profilePicture  String?
  trips           HuntingTrip[]
  posts           CommunityPost[]
  comments        Comment[]
}

model HuntingTrip {
  id         Int              @id @default(autoincrement())
  location   String
  date       DateTime
  notes      String?
  weather    String?
  user       User             @relation(fields: [userId], references: [id])
  userId     Int
  sightings  WildlifeSighting[]
}

model WildlifeSighting {
  id        Int       @id @default(autoincrement())
  species   String
  quantity  Int
  timestamp DateTime
  photo     String?
  trip      HuntingTrip @relation(fields: [tripId], references: [id])
  tripId    Int
}

model CommunityPost {
  id        Int       @id @default(autoincrement())
  title     String
  content   String
  date      DateTime
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  comments  Comment[]
}

model Comment {
  id        Int       @id @default(autoincrement())
  content   String
  date      DateTime
  post      CommunityPost @relation(fields: [postId], references: [id])
  postId    Int
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
}

